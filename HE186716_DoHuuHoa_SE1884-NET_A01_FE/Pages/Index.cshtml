@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<div class="text-center mb-4">
    <h1 class="display-4">FU News Management</h1>
    <p class="lead">Hệ thống quản lý tin tức FPT University</p>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Tin tức mới nhất</h4>
    <div>
        <span class="badge bg-secondary">@Model.TotalCount bài viết</span>
    </div>
</div>

@if (Model.Articles.Count == 0) 
{
    <div class="alert alert-info">
        Chưa có tin tức nào.
    </div>
}
else
{
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="badge bg-primary mb-2">@article.CategoryName</span>
                        @if (article.NewsStatus == true)
                        {
                            <span class="badge bg-success mb-2">Hoạt động</span>
                        }
                        else if (Model.IsAuthenticated)
                        {
                            <span class="badge bg-warning text-dark mb-2">Không hoạt động</span>
                        }
                        <h5 class="card-title">
                            <a asp-page="/News/Details" asp-route-id="@article.NewsArticleId" class="text-decoration-none">
                                @(article.NewsTitle ?? article.Headline)
                            </a>
                        </h5>
                        <p class="card-text text-muted small">@article.Headline</p>
                        @if (article.Tags.Any())
                        {
                            <div>
                                @foreach (var tag in article.Tags.Take(3))
                                {
                                    <span class="badge bg-light text-dark">#@tag.TagName</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">
                            @article.CreatedByName | @article.CreatedDate?.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
