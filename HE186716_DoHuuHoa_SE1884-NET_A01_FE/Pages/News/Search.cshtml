@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.News.SearchModel
@{
    ViewData["Title"] = "Tìm kiếm tin tức";
}

<!-- Toast Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <div id="notificationToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    </div>
</div>

<h2>Tìm kiếm tin tức</h2>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Từ khóa</label>
                <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="Tìm trong tiêu đề, nội dung..." />
                <small class="text-muted">Tìm kiếm trong tiêu đề, headline và nội dung bài viết</small>
            </div>
            <div class="col-md-3">
                <label class="form-label">Danh mục</label>
                <select name="categoryId" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.CategoryId" selected="@(Model.CategoryId == cat.CategoryId)">@cat.CategoryName</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Thẻ (Tag)</label>
                <select name="tagId" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @foreach (var tag in Model.Tags)
                    {
                        <option value="@tag.TagId" selected="@(Model.TagId == tag.TagId)">#@tag.TagName</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Từ ngày</label>
                <input type="date" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Đến ngày</label>
                <input type="date" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Sắp xếp theo</label>
                <select name="sortBy" class="form-select">
                    <option value="date" selected="@(Model.SortBy == "date" || string.IsNullOrEmpty(Model.SortBy))">Mới nhất</option>
                    <option value="title" selected="@(Model.SortBy == "title")">Tiêu đề (A-Z)</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-primary flex-fill">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
                <a asp-page="/News/Search" class="btn btn-secondary flex-fill">
                    <i class="bi bi-arrow-clockwise"></i> Làm mới
                </a>
            </div>
        </form>
    </div>
</div>



<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="mb-0">
        <strong>@Model.TotalCount</strong> kết quả 
        @if (!string.IsNullOrEmpty(Model.Keyword))
        {
            <span class="text-muted">cho "@Model.Keyword"</span>
        }
        @if (Model.CategoryId.HasValue || Model.TagId.HasValue || Model.StartDate.HasValue || Model.EndDate.HasValue)
        {
            <span class="text-muted">(có bộ lọc)</span>
        }
    </p>
    <div>
        <small class="text-muted">
            Sắp xếp: 
            <strong>@(Model.SortBy == "title" ? "Theo tiêu đề" : "Mới nhất")</strong>
        </small>
    </div>
</div>

@if (Model.Articles.Count == 0) 
{
    <div class="alert alert-info">
        Không tìm thấy kết quả phù hợp.
    </div>
}
else
{
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="badge bg-primary mb-2">@article.CategoryName</span>
                        @if (article.NewsStatus == true)
                        {
                            <span class="badge bg-success mb-2">Hoạt động</span>
                        }
                        else if (Model.IsAuthenticated)
                        {
                            <span class="badge bg-warning text-dark mb-2">Không hoạt động</span>
                        }
                        <h5 class="card-title">
                            <a asp-page="/News/Details" asp-route-id="@article.NewsArticleId" class="text-decoration-none">
                                @(article.NewsTitle ?? article.Headline)
                            </a>
                        </h5>
                        <p class="card-text text-muted small">@article.Headline</p>
                        @if (article.Tags.Any())
                        {
                            <div>
                                @foreach (var tag in article.Tags.Take(3))
                                {
                                    <span class="badge bg-light text-dark">#@tag.TagName</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">
                            @article.CreatedByName | @article.CreatedDate?.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Phân trang">
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="/News/Search" 
                       asp-route-keyword="@Model.Keyword"
                       asp-route-categoryId="@Model.CategoryId"
                       asp-route-tagId="@Model.TagId"
                       asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                       asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-currentPage="@(Model.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i> Trước
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="/News/Search" 
                           asp-route-keyword="@Model.Keyword"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-tagId="@Model.TagId"
                           asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                           asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-currentPage="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="/News/Search" 
                       asp-route-keyword="@Model.Keyword"
                       asp-route-categoryId="@Model.CategoryId"
                       asp-route-tagId="@Model.TagId"
                       asp-route-startDate="@Model.StartDate?.ToString("yyyy-MM-dd")"
                       asp-route-endDate="@Model.EndDate?.ToString("yyyy-MM-dd")"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-currentPage="@(Model.CurrentPage + 1)">
                        Sau <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
}

@section Scripts {
<script>
(function() {
    'use strict';
    
    // Toast notification function
    function showToast(message, isSuccess) {
        var toast = document.getElementById('notificationToast');
        var body = document.getElementById('toastMessage');
        var closeBtn = toast.querySelector('.btn-close');
        
        body.textContent = message;
        toast.classList.remove('text-bg-success', 'text-bg-danger', 'bg-success', 'bg-danger', 'text-white');
        
        if (isSuccess) {
            toast.classList.add('bg-success', 'text-white');
        } else {
            toast.classList.add('bg-danger', 'text-white');
        }
        
        closeBtn.classList.add('btn-close-white');
        
        var bsToast = new bootstrap.Toast(toast, { autohide: true, delay: 4000 });
        bsToast.show();
    }
    
    // Date range validation
    var startDateInput = document.querySelector('input[name="startDate"]');
    var endDateInput = document.querySelector('input[name="endDate"]');
    var searchForm = document.querySelector('form');
    
    function validateDateRange() {
        var startDate = startDateInput.value;
        var endDate = endDateInput.value;
        
        if (startDate && endDate) {
            if (new Date(startDate) > new Date(endDate)) {
                showToast('Ngày bắt đầu không được sau ngày kết thúc', false);
                return false;
            }
        }
        return true;
    }
    
    // Validate on change
    if (startDateInput && endDateInput) {
        startDateInput.addEventListener('change', validateDateRange);
        endDateInput.addEventListener('change', validateDateRange);
        
        // Validate on form submit
        if (searchForm) {
            searchForm.addEventListener('submit', function(e) {
                if (!validateDateRange()) {
                    e.preventDefault();
                    return false;
                }
            });
        }
    }
})();
</script>
}

