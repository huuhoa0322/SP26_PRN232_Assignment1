@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.News.SearchModel
@{
    ViewData["Title"] = "Tìm kiếm tin tức";
}

<h2>Tìm kiếm tin tức</h2>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <label class="form-label">Từ khóa</label>
                <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="Nhập từ khóa..." />
            </div>
            <div class="col-md-4">
                <label class="form-label">Danh mục</label>
                <select name="categoryId" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.CategoryId" selected="@(Model.CategoryId == cat.CategoryId)">@cat.CategoryName</option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>

<p class="text-muted">Tìm thấy <strong>@Model.Articles.Count</strong> kết quả</p>

@if (Model.Articles.Count == 0)
{
    <div class="alert alert-info">
        Không tìm thấy kết quả phù hợp.
    </div>
}
else
{
    <div class="row">
        @foreach (var article in Model.Articles)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="badge bg-primary mb-2">@article.CategoryName</span>
                        @if (article.NewsStatus == true)
                        {
                            <span class="badge bg-success mb-2">Active</span>
                        }
                        <h5 class="card-title">
                            <a asp-page="/News/Details" asp-route-id="@article.NewsArticleId" class="text-decoration-none">
                                @(article.NewsTitle ?? article.Headline)
                            </a>
                        </h5>
                        <p class="card-text text-muted small">@article.Headline</p>
                        @if (article.Tags.Any())
                        {
                            <div>
                                @foreach (var tag in article.Tags.Take(3))
                                {
                                    <span class="badge bg-light text-dark">#@tag.TagName</span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <small class="text-muted">
                            @article.CreatedByName | @article.CreatedDate?.ToString("dd/MM/yyyy")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>
}
