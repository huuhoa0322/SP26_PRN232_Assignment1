@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.Staff.TagArticlesModel
@{
    ViewData["Title"] = $"Bài viết có tag: {Model.Tag?.TagName}";
}

<div class="mb-3">
    <a href="/Staff/Tags" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách Tags
    </a>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2>Bài viết có tag: <span class="badge bg-info">#@Model.Tag?.TagName</span></h2>
        @if (!string.IsNullOrEmpty(Model.Tag?.Note))
        {
            <p class="text-muted mb-0">@Model.Tag.Note</p>
        }
    </div>
</div>

<!-- Stats info -->
@if (Model.TotalCount > 0)
{
    <div class="mb-3">
        <small class="text-muted">
            Hiển thị @((Model.PageIndex - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)) 
            trong tổng số @Model.TotalCount bài viết
        </small>
    </div>
}

<table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Tiêu đề</th>
                <th>Tiêu đề ngắn</th>
                <th>Danh mục</th>
                <th>Tác giả</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model.Articles)
            {
                <tr>
                    <td>@article.NewsArticleId</td>
                    <td>@article.NewsTitle</td>
                    <td>@article.Headline</td>
                    <td>@article.CategoryName</td>
                    <td>@article.CreatedByName</td>
                    <td>@article.CreatedDate?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge @(article.NewsStatus == true ? "bg-success" : "bg-secondary")">
                            @(article.NewsStatus == true ? "Hoạt động" : "Không hoạt động")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- Previous -->
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" asp-page="/Staff/TagArticles" 
                       asp-route-tagId="@Model.TagId" 
                       asp-route-pageIndex="@(Model.PageIndex - 1)">
                        Trước
                    </a>
                </li>

                @{
                    var startPage = Math.Max(1, Model.PageIndex - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="/Staff/TagArticles" 
                           asp-route-tagId="@Model.TagId" 
                           asp-route-pageIndex="1">1</a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-page="/Staff/TagArticles" 
                           asp-route-tagId="@Model.TagId" 
                           asp-route-pageIndex="@i">@i</a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    @if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-page="/Staff/TagArticles" 
                           asp-route-tagId="@Model.TagId" 
                           asp-route-pageIndex="@Model.TotalPages">@Model.TotalPages</a>
                    </li>
                }

                <!-- Next -->
                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" asp-page="/Staff/TagArticles" 
                       asp-route-tagId="@Model.TagId" 
                       asp-route-pageIndex="@(Model.PageIndex + 1)">
                        Sau
                    </a>
                </li>
            </ul>
        </nav>
    }
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Chưa có bài viết nào sử dụng tag này.
    </div>
}
