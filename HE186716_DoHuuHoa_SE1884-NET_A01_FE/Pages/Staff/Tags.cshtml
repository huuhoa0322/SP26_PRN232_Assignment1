@page
@model HE186716_DoHuuHoa_SE1884_NET_A01_FE.Pages.Staff.TagsModel
@{
    ViewData["Title"] = "Quản lý Tags";
}

<!-- Toast Container -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 9999">
    <div id="notificationToast" class="toast align-items-center border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage"></div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý Tags</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#tagModal" onclick="openCreateModal()">
        <i class="bi bi-plus-circle"></i> Thêm Tag
    </button>
</div>

<!-- Search Form -->
<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-10">
                <label class="form-label">Tìm kiếm tag</label>
                <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="Nhập tên tag..." />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Tìm kiếm
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Stats info -->
@if (Model.TotalCount > 0)
{
    <div class="mb-3">
        <small class="text-muted">
            Hiển thị @((Model.PageIndex - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)) 
            trong tổng số @Model.TotalCount tag(s)
        </small>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên Tag</th>
            <th>Ghi chú</th>
            <th>Số bài viết</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Tags.Any())
        {
            @foreach (var tag in Model.Tags)
            {
                <tr>
                    <td>@tag.TagId</td>
                    <td><span class="badge bg-info">#@tag.TagName</span></td>
                    <td>@tag.Note</td>
                    <td>
                        @if (tag.ArticleCount > 0)
                        {
                            <a href="/Staff/TagArticles?tagId=@tag.TagId" class="badge bg-primary">
                                @tag.ArticleCount bài viết
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">0 bài viết</span>
                        }
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-warning" 
                                data-bs-toggle="modal" data-bs-target="#tagModal"
                                onclick='openEditModal(@tag.TagId, @Html.Raw(Json.Serialize(tag.TagName)), @Html.Raw(Json.Serialize(tag.Note ?? "")))'>
                            Sửa
                        </button>
                        <button type="button" class="btn btn-sm btn-danger" 
                                data-bs-toggle="modal" data-bs-target="#deleteModal"
                                onclick='openDeleteModal(@tag.TagId, @Html.Raw(Json.Serialize(tag.TagName)))'>
                            Xóa
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Không tìm thấy tag nào</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- Previous -->
            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                <a class="page-link" asp-page="/Staff/Tags" 
                   asp-route-keyword="@Model.Keyword" 
                   asp-route-pageIndex="@(Model.PageIndex - 1)">
                    Trước
                </a>
            </li>

            @{
                var startPage = Math.Max(1, Model.PageIndex - 2);
                var endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);
            }

            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="/Staff/Tags" 
                       asp-route-keyword="@Model.Keyword" 
                       asp-route-pageIndex="1">1</a>
                </li>
                @if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            @for (var i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-page="/Staff/Tags" 
                       asp-route-keyword="@Model.Keyword" 
                       asp-route-pageIndex="@i">@i</a>
                </li>
            }

            @if (endPage < Model.TotalPages)
            {
                @if (endPage < Model.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item">
                    <a class="page-link" asp-page="/Staff/Tags" 
                       asp-route-keyword="@Model.Keyword" 
                       asp-route-pageIndex="@Model.TotalPages">@Model.TotalPages</a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                <a class="page-link" asp-page="/Staff/Tags" 
                   asp-route-keyword="@Model.Keyword" 
                   asp-route-pageIndex="@(Model.PageIndex + 1)">
                    Sau
                </a>
            </li>
        </ul>
    </nav>
}

<!-- Tag Modal -->
<div class="modal fade" id="tagModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Thêm Tag</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="TagId" id="tagId" />
                    <input type="hidden" name="handler" id="formHandler" value="Create" />

                    <div class="mb-3">
                        <label class="form-label">Tên Tag <span class="text-danger">*</span></label>
                        <input type="text" name="TagName" id="tagName" class="form-control" required maxlength="50" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        <textarea name="Note" id="tagNote" class="form-control" rows="3" maxlength="500"></textarea>
                        <small class="text-muted">Mô tả chi tiết về tag này</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="deleteId" id="deleteId" />
                    <p>Bạn có chắc muốn xóa tag: <strong id="deleteName"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Show toast if there's a message
        var message = '@Html.Raw(Model.Message ?? "")';
        var isSuccess = @(Model.IsSuccess ? "true" : "false");
        
        if (message) {
            showToast(message, isSuccess);
        }
    });

    function showToast(message, isSuccess) {
        var toastEl = document.getElementById('notificationToast');
        var toastBody = document.getElementById('toastMessage');
        var closeBtn = toastEl.querySelector('.btn-close');
        
        // Set message
        toastBody.textContent = message;
        
        // Remove previous classes and styles
        toastEl.classList.remove('text-bg-success', 'text-bg-danger', 'bg-success', 'bg-danger', 'text-white');
        toastEl.style.backgroundColor = '';
        toastEl.style.color = '';
        
        // Set color based on success/error
        if (isSuccess) {
            toastEl.classList.add('bg-success', 'text-white');
            toastEl.style.backgroundColor = '#198754'; // Bootstrap green
        } else {
            toastEl.classList.add('bg-danger', 'text-white');
            toastEl.style.backgroundColor = '#dc3545'; // Bootstrap red
        }
        
        // White text for better contrast 
        toastEl.style.color = '#ffffff';
        
        // Ensure close button is visible on both backgrounds
        closeBtn.classList.add('btn-close-white');
        
        // Show toast
        var toast = new bootstrap.Toast(toastEl, {
            autohide: true,
            delay: 4000
        });
        toast.show();
    }

    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Thêm Tag';
        document.getElementById('formHandler').value = 'Create';
        document.getElementById('tagId').value = '';
        document.getElementById('tagName').value = '';
        document.getElementById('tagNote').value = '';
    }

    function openEditModal(id, name, note) {
        document.getElementById('modalTitle').textContent = 'Sửa Tag';
        document.getElementById('formHandler').value = 'Update';
        document.getElementById('tagId').value = id;
        document.getElementById('tagName').value = name;
        document.getElementById('tagNote').value = note || '';
    }

    function openDeleteModal(id, name) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteName').textContent = name;
    }
</script>
}